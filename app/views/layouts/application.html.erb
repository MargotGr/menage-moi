    <meta property="og:url"                content="https://www.menage-moi.fr" />
    <meta property="og:type"               content="article" />
    <meta property="og:title"              content="Ménage-moi, la solution pour les colocataires" />
    <meta property="og:description"        content="Première application de répartition des tâches ménagères entre colocataires" />
    <meta property="og:image"              content="<%= image_url('home-menage-moi-fb.jpg') %>" />

    <meta name="description" content="Première application de répartition des tâches ménagères entre colocataires" />
