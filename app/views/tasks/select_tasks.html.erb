<div class="container">

  <h1>Désélectionne les tâches que tu ne partages pas avec tes colocs</h1>

  <%= simple_form_for :tasks, url: tasks_select_path do |f| %>
      <%= f.input :tasks,
                  label: "Liste des tâches",
                  as: :check_boxes,
                  :input_html => { :checked => true },
                  collection: @default_tasks %>
    <%= f.button :submit %>
  <% end %>

</div>
